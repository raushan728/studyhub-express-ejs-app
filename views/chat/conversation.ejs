<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat - StudyHub</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/chat.css">
    <link rel="stylesheet" href="/stylesheets/dark-mode.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">
                    <i class="fas fa-graduation-cap"></i>
                    <span>StudyHub</span>
                </a>
            </div>
            
            <div class="nav-menu">
                <a href="/" class="nav-link">Home</a>
                <a href="/courses" class="nav-link">Courses</a>
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/chat" class="nav-link active">Chat</a>
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin" class="nav-link">Admin</a>
                <% } %>
            </div>

            <div class="nav-user">
                <button class="theme-toggle" id="themeToggle" title="Toggle Dark Mode">
                    <i class="fas fa-moon"></i>
                </button>
                <% if (user) { %>
                    <div class="user-menu">
                        <div class="user-avatar">
                            <img src="<%= user.avatar || '/images/default-avatar.png' %>" alt="<%= user.name %>">
                        </div>
                        <div class="user-dropdown">
                            <a href="/dashboard/profile">Profile</a>
                            <a href="/auth/logout">Logout</a>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-primary">Login</a>
                <% } %>
            </div>

            <div class="nav-toggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="chat-container">
        <div class="chat-sidebar">
            <div class="chat-header">
                <h2><i class="fas fa-comments"></i> Messages</h2>
                <button class="btn btn-primary" id="newChatBtn">
                    <i class="fas fa-plus"></i> New Chat
                </button>
            </div>

            <div class="chat-search">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="chatSearch" placeholder="Search chats...">
                </div>
            </div>

            <div class="chat-list" id="chatList">
                <!-- Chat list will be populated via AJAX -->
            </div>
        </div>

        <div class="chat-main">
            <div class="conversation-header">
                <div class="conversation-info">
                    <div class="conversation-avatar">
                        <% if (chat.chatType === 'group') { %>
                            <div class="group-avatar">
                                <i class="fas fa-users"></i>
                            </div>
                        <% } else { %>
                            <img src="<%= otherParticipants[0]?.avatar || '/images/default-avatar.png' %>" 
                                 alt="<%= otherParticipants[0]?.name %>">
                        <% } %>
                    </div>
                    <div class="conversation-details">
                        <h3><%= chat.chatName %></h3>
                        <p>
                            <% if (chat.chatType === 'group') { %>
                                <%= chat.participants.length %> members
                            <% } else { %>
                                <%= otherParticipants[0]?.email %>
                            <% } %>
                        </p>
                    </div>
                </div>
                
                <div class="conversation-actions">
                    <button class="btn btn-icon" id="chatInfoBtn" title="Chat Info">
                        <i class="fas fa-info-circle"></i>
                    </button>
                    <% if (chat.chatType === 'individual') { %>
                        <button class="btn btn-icon" id="deleteChatBtn" title="Delete Chat">
                            <i class="fas fa-trash"></i>
                        </button>
                    <% } %>
                </div>
            </div>

            <div class="conversation-messages" id="messagesContainer">
                <div class="messages-wrapper" id="messagesWrapper">
                    <% if (chat.messages && chat.messages.length > 0) { %>
                        <% chat.messages.forEach(message => { %>
                            <div class="message <%= message.sender._id.toString() === user._id.toString() ? 'sent' : 'received' %>"
                                 data-message-id="<%= message._id %>">
                                <div class="message-avatar">
                                    <img src="<%= message.sender.avatar || '/images/default-avatar.png' %>" 
                                         alt="<%= message.sender.name %>">
                                </div>
                                
                                <div class="message-content">
                                    <div class="message-header">
                                        <span class="message-sender"><%= message.sender.name %></span>
                                        <span class="message-time">
                                            <%= new Date(message.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                        </span>
                                    </div>
                                    
                                    <div class="message-text">
                                        <% if (message.messageType === 'text') { %>
                                            <%= message.content %>
                                        <% } else if (message.messageType === 'file') { %>
                                            <div class="file-message">
                                                <i class="fas fa-file"></i>
                                                <span><%= message.fileName %></span>
                                                <a href="<%= message.fileUrl %>" target="_blank" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-download"></i> Download
                                                </a>
                                            </div>
                                        <% } else if (message.messageType === 'image') { %>
                                            <div class="image-message">
                                                <img src="<%= message.fileUrl %>" alt="Image">
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <div class="message-status">
                                        <% if (message.sender._id.toString() === user._id.toString()) { %>
                                            <% if (message.isRead) { %>
                                                <i class="fas fa-check-double read"></i>
                                            <% } else { %>
                                                <i class="fas fa-check"></i>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-messages">
                            <i class="fas fa-comments"></i>
                            <h3>No messages yet</h3>
                            <p>Start the conversation!</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="conversation-input">
                <div class="input-wrapper">
                    <div class="input-actions">
                        <button class="btn btn-icon" id="attachFileBtn" title="Attach File">
                            <i class="fas fa-paperclip"></i>
                        </button>
                        <button class="btn btn-icon" id="attachImageBtn" title="Attach Image">
                            <i class="fas fa-image"></i>
                        </button>
                    </div>
                    
                    <div class="input-field">
                        <textarea id="messageInput" placeholder="Type your message..." rows="1"></textarea>
                        <button class="btn btn-primary" id="sendMessageBtn">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- File Upload Modal -->
    <div class="modal" id="fileUploadModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Attach File</h3>
                <button class="modal-close" id="closeFileModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="upload-options">
                    <div class="upload-option" id="uploadFile">
                        <i class="fas fa-file"></i>
                        <span>Upload File</span>
                        <input type="file" id="fileInput" accept=".pdf,.doc,.docx,.txt" hidden>
                    </div>
                    <div class="upload-option" id="uploadImage">
                        <i class="fas fa-image"></i>
                        <span>Upload Image</span>
                        <input type="file" id="imageInput" accept="image/*" hidden>
                    </div>
                </div>
                
                <div class="upload-preview" id="uploadPreview" style="display: none;">
                    <div class="preview-item">
                        <i class="fas fa-file"></i>
                        <span id="fileName"></span>
                        <button class="btn btn-sm btn-danger" id="removeFile">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                
                <button class="btn btn-primary" id="sendFileBtn" style="display: none;">
                    <i class="fas fa-paper-plane"></i> Send File
                </button>
            </div>
        </div>
    </div>

    <!-- Chat Info Modal -->
    <div class="modal" id="chatInfoModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Chat Information</h3>
                <button class="modal-close" id="closeInfoModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="modal-body">
                <div class="chat-info">
                    <h4><%= chat.chatName %></h4>
                    <p>Created: <%= new Date(chat.createdAt).toLocaleDateString() %></p>
                    
                    <div class="participants-list">
                        <h5>Participants (<%= chat.participants.length %>)</h5>
                        <% chat.participants.forEach(participant => { %>
                            <div class="participant-item">
                                <img src="<%= participant.avatar || '/images/default-avatar.png' %>" 
                                     alt="<%= participant.name %>">
                                <span><%= participant.name %></span>
                                <% if (chat.groupAdmin && chat.groupAdmin._id.toString() === participant._id.toString()) { %>
                                    <span class="admin-badge">Admin</span>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden inputs for chat data -->
    <input type="hidden" id="currentChatId" value="<%= chat._id %>">
    <input type="hidden" id="currentUserId" value="<%= user._id %>">
    <input type="hidden" id="currentUserName" value="<%= user.name %>">

    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/chat.js"></script>
    <script src="/javascripts/conversation.js"></script>
    <script src="/javascripts/dark-mode.js"></script>
</body>
</html> 