<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - StudyHub</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">StudyHub</a>
            </div>
            <ul class="nav-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Courses</a></li>
                <li><a href="/admin" class="active">Admin</a></li>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            <div class="admin-header">
                <h1>Admin Dashboard</h1>
                <p>Welcome back, <%= user.name %>! Manage your platform</p>
            </div>

            <!-- Quick Stats -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= stats.totalUsers %></h3>
                        <p>Total Students</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= stats.totalCourses %></h3>
                        <p>Total Courses</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= stats.totalEnrollments %></h3>
                        <p>Total Enrollments</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stat-content">
                        <h3>₹<%= (stats.totalEnrollments * 999).toLocaleString() %></h3>
                        <p>Revenue</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions">
                <h2>Quick Actions</h2>
                <div class="action-buttons">
                    <a href="/admin/courses/create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Course
                    </a>
                    <a href="/admin/courses" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Manage Courses
                    </a>
                    <a href="/admin/users" class="btn btn-secondary">
                        <i class="fas fa-users"></i> Manage Users
                    </a>
                </div>
            </div>

            <!-- Recent Courses -->
            <div class="admin-section">
                <div class="section-header">
                    <h2>Recent Courses</h2>
                    <a href="/admin/courses" class="btn btn-outline">View All</a>
                </div>
                <div class="courses-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Course</th>
                                <th>Instructor</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentCourses.forEach(course => { %>
                                <tr>
                                    <td>
                                        <div class="course-info">
                                            <img src="<%= course.thumbnail || '/images/default-course.jpg' %>" alt="<%= course.title %>">
                                            <div>
                                                <h4><%= course.title %></h4>
                                                <p><%= course.category %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= course.instructor ? course.instructor.name : 'Unknown' %></td>
                                    <td>₹<%= course.price %></td>
                                    <td>
                                        <span class="status-badge <%= course.isPublished ? 'published' : 'draft' %>">
                                            <%= course.isPublished ? 'Published' : 'Draft' %>
                                        </span>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/courses/<%= course._id %>" class="btn btn-sm btn-outline">View</a>
                                            <a href="/admin/courses/<%= course._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Popular Courses -->
            <div class="admin-section">
                <div class="section-header">
                    <h2>Popular Courses</h2>
                </div>
                <div class="courses-grid">
                    <% popularCourses.forEach(course => { %>
                        <div class="course-card">
                            <div class="course-image">
                                <img src="<%= course.thumbnail || '/images/default-course.jpg' %>" alt="<%= course.title %>">
                            </div>
                            <div class="course-content">
                                <h3><%= course.title %></h3>
                                <p><%= course.description.substring(0, 100) %>...</p>
                                <div class="course-meta">
                                    <span><i class="fas fa-users"></i> <%= course.totalStudents %> students</span>
                                    <span><i class="fas fa-star"></i> <%= course.averageRating || 0 %>/5</span>
                                </div>
                                <div class="course-price">
                                    <span class="final-price">₹<%= course.price %></span>
                                </div>
                                <a href="/courses/<%= course._id %>" class="btn btn-primary">View Course</a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 StudyHub. All rights reserved.</p>
        </div>
    </footer>

    <script src="/javascripts/main.js"></script>
</body>
</html> 